<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popUpFragContainer"
    android:layout_width="340dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    tools:context=".CreatPopUpFragment"
    android:background="@drawable/biggerbackground">


    <Button
        android:id="@+id/btnCreateCategory"
        android:layout_width="300dp"
        android:layout_height="74dp"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/chakra_petch_bold"
        android:text="Create category"
        android:textSize="26dp"
        android:backgroundTint="@color/dark_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateTransaction"
        android:layout_width="300dp"
        android:layout_height="74dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/chakra_petch_bold"
        android:gravity="center"
        android:backgroundTint="@color/green"
        android:text="Create transaction"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>